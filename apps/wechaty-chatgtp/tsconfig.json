{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ES6", "ESNext"],
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "build",
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
