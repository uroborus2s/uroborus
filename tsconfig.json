{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "src/.umi/*"
      ],
      "@ibr/*": [
        "src/components/*"
      ],
      "@ibr-types/*": [
        "src/core/ibr-types/*"
      ],
      "@ibr-request/*": [
        "src/core/ibr-request/*"
      ],
      "@ibr-class/*": [
        "src/core/ibr-class/*"
      ],
      "@hooks/*": [
        "src/core/hooks/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "types": [
      "webpack-env"
    ]
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    ".umirc.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
